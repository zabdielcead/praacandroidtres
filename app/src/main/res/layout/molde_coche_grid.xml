<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="140pt"
              android:layout_height="140pt"
              android:background="@color/colorGris"
              android:padding="5pt">

    <LinearLayout
            android:background="@drawable/background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/hw_bowser_sm"
                android:id="@+id/imgAuto"/>

            <TextView
                    android:text="Título Coche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="14pt"
                    android:textStyle="bold"
                    android:id="@+id/txAutoTit"/>
            <TextView
                    android:text="Descripción del coche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:id="@+id/txAutoDesc"/>
            <TextView
                    android:text="Precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:id="@+id/txAutoPrecio"/>

    </LinearLayout>


</LinearLayout>